@model cursoProgramacion.Models.Contacto;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Formulario contacto</h1>
    <form asp-controller="Contacto" asp-action="Registrar">
        <div>
            <label asp-for="Name" class="control-label"></label>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div>
            <label asp-for="Lastname" class="control-label"></label>
            <input type="text" asp-for="Lastname" class="form-control">
        </div>
        <div>
            <label asp-for="Email" class="control-label"></label>
            <input type="text" asp-for="Email" class="form-control">
        </div>
        <div>
            <label asp-for="Title" class="control-label"></label>
            <input type="text" asp-for="Title" class="form-control">
        </div>
        <div>
            <label asp-for="Message" class="control-label"></label>
            <input type="text" asp-for="Message" class="form-control">
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
    </form>
    <td>@Html.DisplayTextFor(model => model.Response)</td>
</div>
